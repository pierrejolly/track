{% extends 'layout.html.twig' %}

{% block head_stylesheets %}
    {{ parent() }}

    <!-- Colorpicker -->
    <link type="text/css" rel="stylesheet" href="{{ asset('libs/bootstrap-colorpicker/css/bootstrap-colorpicker.min.css') }}">
{% endblock head_stylesheets %}

{% block body_content %}
    <h1 id="page-title">Projets</h1>

    {% include 'project/_submenu.html.twig' with {'submenu_active': 'edit', 'project': project} only %}
    {% include 'project/_form.html.twig' with {'form': form} only %}
{% endblock %}

{% block body_javascripts %}
    {{ parent() }}

    <!-- Colorpicker -->
    <script src="{{ asset('libs/bootstrap-colorpicker/js/bootstrap-colorpicker.min.js') }}" type="text/javascript"></script>
    <script>
        $('.color-picker').colorpicker({
            'format' : 'hex'
        });
    </script>
{% endblock body_javascripts %}