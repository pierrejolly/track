{% extends 'layout.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}

{% block body_content %}
<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">Veuillez vous connecter</h3>
            </div>
            <div class="panel-body">
                <form role="form"action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST">
                    <fieldset>
                        {{ form_widget(form) }}
                        <button type="submit" class="btn btn-lg btn-info btn-block">{{ 'resetting.reset.submit'|trans }}</button>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock body_content %}
