{% extends 'layout.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
{% trans_default_domain 'FOSUserBundle' %}

{% block body_content %}
<div class="row">
    <div class="col-md-6 col-md-offset-3">
        <h1 id="page-title">Changement de mot de passe</h1>

        <div class="login-panel panel panel-default">
            <div class="panel-body">
                <form role="form" action="{{ path('fos_user_change_password') }}" method="POST">
                    <fieldset>
                        {{ form_widget(form) }}
                        <button type="submit" class="btn btn-lg btn-info btn-block">{{ 'change_password.submit'|trans }}</button>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock body_content %}
