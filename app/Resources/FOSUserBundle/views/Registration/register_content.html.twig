{% trans_default_domain 'FOSUserBundle' %}

{% macro display_form_error(form_component) %}
    {% if not form_component.vars.valid and form_component.vars.errors is not empty %}
        <div class="alert alert-danger">
            {{ form_errors(form_component) }}
        </div>
    {% endif %}
{% endmacro %}

<div class="row">
    <div class="col-md-4 col-md-offset-4">
        <div class="login-panel panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title text-center">Veuillez remplir le formulaire</h3>
            </div>
            <div class="panel-body">
                {{ _self.display_form_error(form) }}

                {{ form_start(form, { 'action': path('fos_user_registration_register') }) }}
                    <fieldset>
                        <div class="form-group">
                            {{ _self.display_form_error(form.username) }}
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-user"></i>
                                </div>
                                {{ form_widget(form.username, {
                                    'attr' : {
                                        'placeholder' : form.username.vars.label,
                                        'class'       : 'form-control'
                                    }
                                }) }}
                            </div>
                        </div>

                        <div class="form-group">
                            {{ _self.display_form_error(form.email) }}
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-at"></i>
                                </div>
                                {{ form_widget(form.email, {
                                    'attr' : {
                                        'placeholder' : form.email.vars.label,
                                        'class'       : 'form-control'
                                    }
                                }) }}
                            </div>
                        </div>

                        <div class="form-group">
                            {{ _self.display_form_error(form.firstName) }}
                            {{ _self.display_form_error(form.lastName) }}
                            <div class="input-group-vertical" role="group">
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-male"></i>
                                    </div>
                                    {{ form_widget(form.firstName, {
                                        'attr' : {
                                            'placeholder' : form.firstName.vars.label,
                                            'class'       : 'form-control'
                                        }
                                    }) }}
                                    {{ form_widget(form.lastName, {
                                        'attr' : {
                                            'placeholder' : form.lastName.vars.label,
                                            'class'       : 'form-control'
                                        }
                                    }) }}
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            {{ _self.display_form_error(form.plainPassword.first) }}
                            {{ _self.display_form_error(form.plainPassword.second) }}
                            <div class="input-group-vertical" role="group">
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-lock"></i>
                                    </div>
                                    {{ form_widget(form.plainPassword.first, {
                                        'attr' : {
                                            'placeholder' : form.plainPassword.first.vars.label,
                                            'class'       : 'form-control'
                                        }
                                    }) }}
                                    {{ form_widget(form.plainPassword.second, {
                                        'attr' : {
                                            'placeholder' : form.plainPassword.second.vars.label,
                                            'class'       : 'form-control'
                                        }
                                    }) }}
                               </div>
                            </div>
                        </div>


                        <input class="btn btn-lg btn-info btn-block" type="submit" value="{{ 'registration.submit'|trans }}" />
                    </fieldset>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>